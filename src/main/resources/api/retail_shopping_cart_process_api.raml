#%RAML 1.0
title: Retail_Shopping_Cart_Process_API
version: v2.0
  
uses: 
  shoppingCart:  /exchange_modules/47f07e0a-f578-47d4-9591-d9e7afffb0fc.retail/retail_shopping_cart_types/1.0.1/retail_shopping_cart_types.raml  

types:
  ShoppingCartCollectionResponse:
    type: shoppingCart.ShoppingCart[]

  ShoppingCartResponse:
    type: shoppingCart.ShoppingCart  

  MessageResponse: 
    properties:
      identifier?: string
      message: string


/shoppingCarts:
  post:
    description: Create shopping Cart
    body:
      application/json:
          type: ShoppingCartCollectionResponse
          example: !include examples/shopping-carts_post_request.raml
              
    responses:
      201:
        body: 
          application/json:
            type: MessageResponse 
            example: 
              {
                "message": "Shopping cart was created"
              }

              
  /{shoppingCartId}:          
    get:
      description: Return shopping cart 
      responses:
        200:
          body: 
            application/json: 
              type: ShoppingCartResponse
              example: !include examples/shopping-cart_get_response.raml         
        404:
          body: 
            application/json:
              type: MessageResponse 
              example: 
                {
                  "message": "Shopping cart not found"
                }
    put:
      description: Update shopping cart  
      body:
        application/json:
          type: ShoppingCartResponse
          example:  !include examples/shopping-cart_put_request.raml  
        
      responses:
        200:
          body: 
            application/json: 
              type: MessageResponse
              example: 
                {
                  "message": "Shopping cart was updated"
                }
        404:
          body: 
            application/json:
              type: MessageResponse 
              example: 
                {
                  "message": "Shopping cart not found"
                }
            
    delete:
      description: Remove shopping cart
      responses:
        200:
          body:
            application/json: 
              example: 
                {
                  "message": "Shopping Cart was deleted"
                }
        404:
          body: 
            application/json:
              type: MessageResponse 
              example: 
                {
                  "message": "Shopping cart not found"
                }
/customers:
  /{customerId}: 
    /shoppingCarts: 
      get: 
        description: Return Shopping Cards of customer
        responses:
            200:
              body:
                application/json:
                  type: ShoppingCartCollectionResponse
                  example: !include examples/shopping-cart_customer_get_response.raml
 